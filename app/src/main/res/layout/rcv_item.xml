<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardOFrec"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/commoncolor">


        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/recicon"
            android:layout_marginStart="20dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/shic"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/recdes"

            android:textColor="@color/black"
            android:text="@string/title"
            android:textSize="16sp"
            android:layout_toEndOf="@id/recdate"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"/>


        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="@string/date"
            android:id="@+id/recdate"

            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_toEndOf="@id/recicon"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>